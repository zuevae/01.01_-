                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="300" 
                 FontSize="18"/>
        <Button x:Name="DobZ"
                Content="Добавить заявку" 
                HorizontalAlignment="Left" 
                Margin="607,141,0,0" 
                VerticalAlignment="Top" 
                FontSize="20" 
                Width="170" 
                Height="37"
                Background="#FFEB5228" Click="DobZ_Click"/>
        <Button Content="Выход" 
                HorizontalAlignment="Left" 
                Margin="652,226,0,0" 
                VerticalAlignment="Top" 
                FontSize="20" 
                Width="80" 
                Height="37"
                Background="#FFEB5228"/>
