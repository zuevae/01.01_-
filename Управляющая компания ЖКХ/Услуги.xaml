                 Width="300" 
                 FontSize="18"/>

        <TextBlock HorizontalAlignment="Left" 
                   Margin="52,259,0,0" 
                   TextWrapping="Wrap" 
                   Text="Необходимая услуга" 
                   VerticalAlignment="Top" 
                   FontSize="20"/>
